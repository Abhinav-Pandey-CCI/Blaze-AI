    .chat-container {
      width: 100%;
      max-width: 420px;
      height: 90vh;
      background: #020617;
      border-radius: 12px;
      display: flex;
      flex-direction: column;
      box-shadow: 0 0 30px rgba(0,0,0,0.6);
    }

    .chat-header {
      padding: 15px;
      text-align: center;
